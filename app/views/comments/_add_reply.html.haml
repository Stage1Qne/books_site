= form_for @comment = Comment.new(:book_id => params[:book_id], :parent_id => params[:parent_id]) do |f|
  = f.hidden_field :parent_id, :value => comment.parent_id
  = f.hidden_field :book_id, value: params[:id]
  .field
    %label Full Name
    = f.text_field :full_name, placeholder: "Full name"
  .field
    %label Email
    = f.text_field :email, placeholder: "Email"
  .ui.form
    .field
      %label Description
      = f.text_area :content, :rows => 8
  .field
    %label Avatar
    = f.file_field :avatar, class: "ui button"
  %div
    = f.submit "Add Reply", class: "ui fluid small button teal submit"
